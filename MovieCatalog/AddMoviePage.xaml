<Page x:Class="MovieCatalog.AddMoviePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieCatalog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddMoviePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="20">
            Movie Name:
        </TextBlock>
        <TextBox x:Name="titleInput" Grid.Column="2" Grid.Row="1"></TextBox>
        
        
        <TextBlock Grid.Column="1" Grid.Row="2" FontSize="12">
            Rating:
        </TextBlock>
        <TextBox x:Name="ratingInput" Grid.Column="2" Grid.Row="2" Width="20"></TextBox>

        <TextBlock Grid.Column="1" Grid.Row="4" FontSize="12">
            Director Full Name:
        </TextBlock>
        <TextBox x:Name="directorNameInput" Grid.Column="2" Grid.Row="4" Width="150"></TextBox>

        <Button x:Name="addMovieButton" Content="Add Movie" Grid.Column="2" Grid.Row="6" Click="addMovieButton_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Page>
